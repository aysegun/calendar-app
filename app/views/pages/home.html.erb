<div class="new-button mt-5">
  <%= link_to "", new_event_path, class: "fa-solid fa-plus" %>
</div>
<div class="container mt-5 text-center">
  <%= month_calendar(events: @events) do |date, events| %>
    <div class="day">
      <%= date %>
    </div>
    <% events.each do |event| %>
      <div class="card-header">
        <div class="card-title">
          <%= link_to event.title.truncate(10, separator: /\s/), event %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
